<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:columnCount="1"
    android:background="@drawable/gradiant_a">
<GridLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_dollar_128"
        android:textColor="#fff"
        android:text="Forex"
        android:id="@+id/btnForex">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_columnWeight="1"
        android:textColor="#fff"
        android:drawableLeft="@drawable/student"
        android:text="Master Mahasiswa"
        android:id="@+id/tampilMahasiswaButton">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_weather_lightning_128"
        android:textColor="#fff"
        android:text="Cuaca"
        android:id="@+id/btnCuaca">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:textColor="#fff"
        android:text="ImplicitIntent"
        android:id="@+id/btnImplicitIntent">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_teenagers_128"
        android:textColor="#fff"
        android:text="TabLayout"
        android:id="@+id/btnTabLayout">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:textColor="#fff"
        android:text="HotelApp"
        android:id="@+id/btnHotelApp">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_teenagers_128"
        android:textColor="#fff"
        android:text="WebView"
        android:id="@+id/btnWebView">
    </Button>
</GridLayout>
</ScrollView>